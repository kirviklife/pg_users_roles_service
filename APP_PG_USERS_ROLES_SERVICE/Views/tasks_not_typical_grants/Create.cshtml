@model APP_PG_USERS_ROLES_SERVICE.Models.tasks_not_typical_grants

@{
  
}

<div class="modal fade" id="AddUser">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Добавить задание</h4>
                <button type="button" class="close btn app-btn-secondary" data-dismiss="modal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                    </svg>
                </button>

            </div>
            <div class="modal-body">
                <div style="display: none;text-align:center;" id="imgSpinner1">
                    <img style="width:100%" src="~/load2.gif" />
                    <h3 style=" color:#0e70a0" class="modal-title">Подождите, идет синхронизация...</h3>
                </div>
                <div id="imgSpinner2">
                    <form asp-action="Create" id="AddTask" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-success="Bindgrid"
                          asp-antiforgery="true">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row g-4 settings-section">
                            <div class="col-12 col-md-6">
                                <label asp-for="task_name" class="form-label"></label>
                                <input asp-for="task_name" class="form-control" />
                                <span asp-validation-for="task_name" class="text-danger"></span>
                            </div>
                        </div>
                        <hr class="my-4">
                        <div class="row g-4 settings-section">
                            <div class="col-12 col-md-9">
                                <label asp-for="task_descr" class="form-label"></label>
                                <textarea asp-for="task_descr" style="height: 148px;" class="form-control" rows="10"></textarea>
                                <span asp-validation-for="task_descr" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-md-3">
                                <label asp-for="count_params" class="form-label"></label>
                                <input asp-for="count_params" ReadOnly="true" class="form-control" />
                                <span asp-validation-for="count_params" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-md-12">
                                <label asp-for="task_script" class="form-label"></label>
                                <textarea asp-for="task_script" style="height: 148px;" class="form-control" rows="10"></textarea>
                                <span asp-validation-for="task_script" class="text-danger"></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" data-save="modal">Сохранить</button>
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script><script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(document).ready(function () {
        $("#task_script").bind('input', function () {
            var text = document.getElementById("task_script").value;
            var count = (text.match(/%s/g) || []).length;
            $('#count_params').val(count);

        });
    });

</script>