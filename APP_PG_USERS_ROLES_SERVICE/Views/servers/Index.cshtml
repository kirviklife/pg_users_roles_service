@model IEnumerable<APP_PG_USERS_ROLES_SERVICE.Models.view_servers_connect_checks>

@{
	ViewData["Title"] = "Index";
}





<div class="row g-3 mb-4 align-items-center justify-content-between">
	<div class="col-auto">
		<h1 class="app-page-title mb-0">Список серверов</h1>
	</div>
	<div class="col-auto">
		<div class="page-utilities">
			<div class="row g-2 justify-content-start justify-content-md-end align-items-center">
				<div class="col-auto">
							<a asp-action="Create" class="btn btn-outline-primary">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
									<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
									<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
								</svg>
								Добавить
							</a>
						</div>
				<div class="col-auto">
					
					<form class="docs-search-form row gx-1 align-items-center">
						<div class="col-auto">
							<input type="text" id="search-docs" name="searchdocs" class="form-control search-docs" placeholder="Поиск...">
						</div>
						<div class="col-auto">
							<button type="submit" class="btn app-btn-secondary">Найти</button>
						</div>
					</form>

				</div><!--//col-->
				<div class="col-auto">

					<select class="form-select w-auto">
						<option selected="" value="0">Все</option>
						<option value="1">Активные</option>
						<option value="2">Неактивные</option>
					</select>
				</div>
			</div><!--//row-->
		</div><!--//table-utilities-->
	</div><!--//col-auto-->
</div><!--//row-->

<div class="row g-4">
	@foreach (var item in Model)
	{
		<div class="col-6 col-md-4 col-xl-3 col-xxl-4">
			<div class="app-card app-card-doc shadow-sm h-100">
				<div class="app-card-thumb-holder p-3">
